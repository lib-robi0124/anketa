@model GlasAnketa.ViewModels.Models.RegisterQuestionVM
@{
    ViewData["Title"] = "Create Question";
}

<h2>Create Question</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="CreateQuestion" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="QuestionFormId" class="form-label">Form</label>
        <select asp-for="QuestionFormId" class="form-select" asp-items="@(ViewBag.QuestionForms as SelectList)"></select>
        <span asp-validation-for="QuestionFormId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Text" class="form-label">Question Text</label>
        <textarea asp-for="Text" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="QuestionTypeId" class="form-label">Question Type</label>
        <select asp-for="QuestionTypeId" class="form-select" asp-items="@(ViewBag.QuestionTypes as SelectList)"></select>
        <span asp-validation-for="QuestionTypeId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="ManageQuestions" class="btn btn-secondary">Cancel</a>
</form>
