@{
    ViewData["Title"] = "Reset User Password";
}

<h2>Reset Password for @ViewBag.UserName</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form asp-action="ResetUserPassword" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@ViewBag.UserId" />

    <div class="mb-3">
        <label for="newPassword" class="form-label">New Password</label>
        <input id="newPassword" name="newPassword" class="form-control" type="password" />
    </div>

    <button type="submit" class="btn btn-danger">Reset Password</button>
    <a asp-action="ManageUsers" class="btn btn-secondary">Cancel</a>
</form>
