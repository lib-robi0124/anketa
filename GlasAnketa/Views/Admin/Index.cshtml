@model AdminDashboardVM
@{
    ViewData["Title"] = "Admin Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="admin-container">
        <div class="admin-header">
            <h1>🚀 Admin Dashboard</h1>
            <div class="user-info">
                <p>Welcome, <strong>@Context.Session.GetString("UserName")</strong>!</p>
                <p>Role: <span class="badge bg-primary">@Context.Session.GetString("UserRole")</span></p>
                <p>Company ID: <strong>@Context.Session.GetInt32("CompanyId")</strong></p>
            </div>
            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </button>
            </form>
        </div>

        <!-- Statistics Cards -->
        <div class="dashboard-cards">
            <div class="dashboard-card">
                <div class="card-icon">
                    <i class="fas fa-clipboard-list"></i>
                </div>
                <div class="card-content">
                    <h3>Forms</h3>
                    <div class="number" id="formsCount">0</div>
                    <p>Active Questionnaires</p>
                </div>
            </div>

            <div class="dashboard-card">
                <div class="card-icon">
                    <i class="fas fa-chart-bar"></i>
                </div>
                <div class="card-content">
                    <h3>Responses</h3>
                    <div class="number" id="responsesCount">0</div>
                    <p>Total Answers</p>
                </div>
            </div>

            <div class="dashboard-card">
                <div class="card-icon">
                    <i class="fas fa-users"></i>
                </div>
                <div class="card-content">
                    <h3>Users</h3>
                    <div class="number" id="usersCount">0</div>
                    <p>Registered Users</p>
                </div>
            </div>

            <div class="dashboard-card">
                <div class="card-icon">
                    <i class="fas fa-gauge"></i>
                </div>
                <div class="card-content">
                    <h3>Completion</h3>
                    <div class="number" id="completionRate">0</div>
                    <p>Average Completion (0-100)</p>
                </div>
            </div>
        </div>

        <!-- Charts Section -->
        <div class="charts-section">
            <div class="chart-container">
                <h3><i class="fas fa-chart-pie"></i> Response Distribution</h3>
                <canvas id="responseChart" width="400" height="200"></canvas>
            </div>
            <div class="chart-container">
                <h3><i class="fas fa-star"></i> Satisfaction Scores</h3>
                <canvas id="satisfactionChart" width="400" height="200"></canvas>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="admin-actions">
            <h3><i class="fas fa-bolt"></i> Quick Actions</h3>
            <div class="action-buttons">
                <a href="@Url.Action("ManageQuestions", "Admin")" class="action-btn btn-primary">
                    <i class="fas fa-edit"></i>
                    <span>Manage Questions</span>
                </a>
                <a href="@Url.Action("ManageForms", "Admin")" class="action-btn btn-success">
                    <i class="fas fa-clipboard"></i>
                    <span>Manage Forms</span>
                </a>
                <a href="@Url.Action("ManageUsers", "Admin")" class="action-btn btn-info">
                    <i class="fas fa-user-cog"></i>
                    <span>Manage Users</span>
                </a>
                <a href="@Url.Action("ViewResults", "Admin")" class="action-btn btn-warning">
                    <i class="fas fa-chart-line"></i>
                    <span>View Results</span>
                </a>
            </div>
        </div>

        <!-- Reporting Section -->
        <div class="reporting-section">
            <h3><i class="fas fa-file-alt"></i> Advanced Reports</h3>
            <div class="report-cards">
                <div class="report-card">
                    <div class="report-icon">
                        <i class="fas fa-question-circle"></i>
                    </div>
                    <div class="report-content">
                        <h4>Question Reports</h4>
                        <p>Detailed analysis by individual questions with satisfaction percentages</p>
                        <a href="@Url.Action("QuestionReports", "Reports")" class="btn btn-outline-primary">
                            <i class="fas fa-external-link-alt"></i> View Report
                        </a>
                    </div>
                </div>

                <div class="report-card">
                    <div class="report-icon">
                        <i class="fas fa-clipboard-check"></i>
                    </div>
                    <div class="report-content">
                        <h4>Form Reports</h4>
                        <p>Overall form performance and completion rates analysis</p>
                        <a href="@Url.Action("FormReports", "Reports")" class="btn btn-outline-success">
                            <i class="fas fa-external-link-alt"></i> View Report
                        </a>
                    </div>
                </div>

                <div class="report-card">
                    <div class="report-icon">
                        <i class="fas fa-sitemap"></i>
                    </div>
                    <div class="report-content">
                        <h4>OU Analysis - Questions</h4>
                        <p>Question performance breakdown by Organizational Units</p>
                        <a href="@Url.Action("QuestionByOUReports", "Reports")" class="btn btn-outline-info">
                            <i class="fas fa-external-link-alt"></i> View Report
                        </a>
                    </div>
                </div>

                <div class="report-card">
                    <div class="report-icon">
                        <i class="fas fa-building"></i>
                    </div>
                    <div class="report-content">
                        <h4>OU Analysis - Forms</h4>
                        <p>Form performance analysis across different departments</p>
                        <a href="@Url.Action("FormByOUReports", "Reports")" class="btn btn-outline-warning">
                            <i class="fas fa-external-link-alt"></i> View Report
                        </a>
                    </div>
                </div>

                <div class="report-card">
                    <div class="report-icon">
                        <i class="fas fa-tachometer-alt"></i>
                    </div>
                    <div class="report-content">
                        <h4>Reports Dashboard</h4>
                        <p>Comprehensive overview with all reporting metrics and analytics</p>
                        <a href="@Url.Action("Index", "Reports")" class="btn btn-primary">
                            <i class="fas fa-tachometer-alt"></i> Full Dashboard
                        </a>
                    </div>
                </div>

                <div class="report-card">
                    <div class="report-icon">
                        <i class="fas fa-download"></i>
                    </div>
                    <div class="report-content">
                        <h4>Export Data</h4>
                        <p>Download complete datasets for external analysis</p>
                        <div class="export-buttons">
                            <form asp-action="ExportQuestionReports" asp-controller="Reports" method="post" style="display: inline;">
                                <button type="submit" class="btn btn-sm btn-outline-secondary">
                                    <i class="fas fa-file-csv"></i> Questions CSV
                                </button>
                            </form>
                            <form asp-action="ExportFormReports" asp-controller="Reports" method="post" style="display: inline;">
                                <button type="submit" class="btn btn-sm btn-outline-secondary">
                                    <i class="fas fa-file-csv"></i> Forms CSV
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- User Answer Status Report -->
        @if (Model != null && Model.UserAnswerStatuses.Any())
        {
            <div class="user-answer-status">
                <h3><i class="fas fa-users"></i> User Answer Status</h3>
                <form asp-action="ExportUserAnswerStatus" asp-controller="Admin" method="post" class="mb-3">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-sm btn-outline-secondary">
                        <i class="fas fa-file-csv"></i> Export User Answer Status
                    </button>
                </form>
                <div class="table-responsive">
                    <table class="table table-sm table-striped align-middle user-answer-table">
                        <thead>
                            <tr>
                                <th>CompanyId</th>
                                <th>Full Name</th>
                                <th>Answered</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var row in Model.UserAnswerStatuses)
                            {
                                <tr>
                                    <td>@row.CompanyId</td>
                                    <td>@row.FullName</td>
                                    <td>
                                        @if (row.HasAnswers)
                                        {
                                            <span class="badge bg-success">Yes</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">No</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }

        <!-- Recent Activity -->
        <div class="recent-activity">
            <h3><i class="fas fa-history"></i> Recent Activity</h3>
            <div class="activity-list" id="recentActivity">
                <div class="activity-item">
                    <i class="fas fa-sync-alt fa-spin"></i>
                    <span>Loading recent activity...</span>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Initialize dashboard data
        document.addEventListener('DOMContentLoaded', function() {
            loadDashboardData();
            initializeCharts();
            loadRecentActivity();
        });

        // Load dashboard statistics
        async function loadDashboardData() {
            try {
                const response = await fetch('/Reports/GetReportSummary');
                const data = await response.json();

                document.getElementById('formsCount').textContent = data.totalForms || 0;
                document.getElementById('responsesCount').textContent = data.totalAnswers || 0;
                document.getElementById('usersCount').textContent = data.totalUsers || 0;
                document.getElementById('completionRate').textContent = data.averageFormCompletionDisplay || '0';

            } catch (error) {
                console.error('Error loading dashboard data:', error);
            }
        }

        // Initialize charts
        function initializeCharts() {
            // Response Distribution Chart
            const responseCtx = document.getElementById('responseChart').getContext('2d');
            new Chart(responseCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Scale Answers', 'Text Answers', 'Incomplete'],
                    datasets: [{
                        data: [65, 25, 10], // Example data - replace with real data
                        backgroundColor: ['#3498db', '#27ae60', '#e74c3c'],
                        borderWidth: 2,
                        borderColor: '#fff'
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });

            // Satisfaction Scores Chart
            const satisfactionCtx = document.getElementById('satisfactionChart').getContext('2d');
            new Chart(satisfactionCtx, {
                type: 'bar',
                data: {
                    labels: ['Form 1', 'Form 2', 'Form 3', 'Form 4'],
                    datasets: [{
                        label: 'Satisfaction Score',
                        data: [85, 72, 90, 78],
                        backgroundColor: '#9b59b6',
                        borderColor: '#8e44ad',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 100,
                            title: {
                                display: true,
                                text: 'Satisfaction'
                            }
                        }
                    }
                }
            });
        }

        // Load recent activity
        async function loadRecentActivity() {
            try {
                // Simulate API call - replace with actual endpoint
                setTimeout(() => {
                    const activityList = document.getElementById('recentActivity');
                    activityList.innerHTML = `
                        <div class="activity-item">
                            <i class="fas fa-user-check text-success"></i>
                            <span>User <strong>20708</strong> completed Form 1</span>
                            <small>2 minutes ago</small>
                        </div>
                        <div class="activity-item">
                            <i class="fas fa-user-check text-success"></i>
                            <span>User <strong>20964</strong> completed Form 2</span>
                            <small>5 minutes ago</small>
                        </div>
                        <div class="activity-item">
                            <i class="fas fa-chart-line text-info"></i>
                            <span>New response recorded for Question 3</span>
                            <small>10 minutes ago</small>
                        </div>
                        <div class="activity-item">
                            <i class="fas fa-user-plus text-primary"></i>
                            <span>New user registered from Production department</span>
                            <small>15 minutes ago</small>
                        </div>
                    `;
                }, 1000);
            } catch (error) {
                console.error('Error loading recent activity:', error);
            }
        }

        // Auto-refresh dashboard every 30 seconds
        setInterval(loadDashboardData, 30000);
    </script>

    <style>
        .admin-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 20px;
            background: #f8f9fa;
            min-height: 100vh;
        }

        .admin-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 30px;
            border-radius: 15px;
            margin-bottom: 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

            .admin-header h1 {
                margin: 0;
                font-size: 2.5em;
                font-weight: 700;
            }

        .user-info {
            text-align: center;
        }

            .user-info p {
                margin: 5px 0;
            }

        .badge {
            font-size: 0.8em;
            padding: 5px 10px;
        }

        .dashboard-cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .dashboard-card {
            background: white;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
            display: flex;
            align-items: center;
            gap: 20px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .dashboard-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 25px rgba(0,0,0,0.15);
            }

        .card-icon {
            font-size: 2.5em;
            color: #3498db;
        }

        .card-content h3 {
            margin: 0 0 10px 0;
            color: #2c3e50;
            font-size: 1.1em;
        }

        .card-content .number {
            font-size: 2.2em;
            font-weight: 700;
            color: #2c3e50;
            margin-bottom: 5px;
        }

        .card-content p {
            margin: 0;
            color: #7f8c8d;
            font-size: 0.9em;
        }

        .charts-section {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .chart-container {
            background: white;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        }

            .chart-container h3 {
                margin-bottom: 20px;
                color: #2c3e50;
                display: flex;
                align-items: center;
                gap: 10px;
            }

        .admin-actions {
            background: white;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
            margin-bottom: 30px;
        }

            .admin-actions h3 {
                margin-bottom: 20px;
                color: #2c3e50;
                display: flex;
                align-items: center;
                gap: 10px;
            }

        .action-buttons {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
        }

        .action-btn {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 25px 15px;
            text-decoration: none;
            border-radius: 10px;
            transition: all 0.3s ease;
            text-align: center;
            gap: 10px;
        }

            .action-btn i {
                font-size: 2em;
                margin-bottom: 5px;
            }

            .action-btn span {
                font-weight: 600;
                font-size: 0.95em;
            }

            .action-btn:hover {
                transform: translateY(-3px);
                text-decoration: none;
            }

        .reporting-section {
            background: white;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
            margin-bottom: 30px;
        }

            .reporting-section h3 {
                margin-bottom: 25px;
                color: #2c3e50;
                display: flex;
                align-items: center;
                gap: 10px;
            }

        .report-cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 20px;
        }

        .report-card {
            background: #f8f9fa;
            padding: 25px;
            border-radius: 10px;
            border-left: 4px solid #3498db;
            display: flex;
            gap: 15px;
            transition: all 0.3s ease;
        }

            .report-card:hover {
                background: #e9ecef;
                transform: translateX(5px);
            }

        .report-icon {
            font-size: 2em;
            color: #3498db;
            flex-shrink: 0;
        }

        .report-content h4 {
            margin: 0 0 10px 0;
            color: #2c3e50;
        }

        .report-content p {
            margin: 0 0 15px 0;
            color: #6c757d;
            font-size: 0.9em;
            line-height: 1.4;
        }

        .export-buttons {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        .user-answer-status {
            background: white;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
            margin-bottom: 30px;
        }

            .user-answer-status h3 {
                margin-bottom: 20px;
                color: #2c3e50;
                display: flex;
                align-items: center;
                gap: 10px;
            }

        .user-answer-table tbody tr td:last-child {
            text-align: center;
        }

        .recent-activity {
            background: white;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        }

            .recent-activity h3 {
                margin-bottom: 20px;
                color: #2c3e50;
                display: flex;
                align-items: center;
                gap: 10px;
            }

        .activity-list {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .activity-item {
            display: flex;
            align-items: center;
            gap: 15px;
            padding: 15px;
            background: #f8f9fa;
            border-radius: 8px;
            border-left: 4px solid #3498db;
        }

            .activity-item i {
                font-size: 1.2em;
                width: 20px;
            }

            .activity-item span {
                flex: 1;
                color: #2c3e50;
            }

            .activity-item small {
                color: #6c757d;
                font-size: 0.8em;
            }

        /* Color variants for buttons */
        .btn-primary {
            background: #3498db;
            border-color: #3498db;
        }

        .btn-success {
            background: #27ae60;
            border-color: #27ae60;
        }

        .btn-info {
            background: #17a2b8;
            border-color: #17a2b8;
        }

        .btn-warning {
            background: #f39c12;
            border-color: #f39c12;
            color: white;
        }

        .btn-danger {
            background: #e74c3c;
            border-color: #e74c3c;
        }

        .btn-outline-primary {
            color: #3498db;
            border-color: #3498db;
        }

        .btn-outline-success {
            color: #27ae60;
            border-color: #27ae60;
        }

        .btn-outline-info {
            color: #17a2b8;
            border-color: #17a2b8;
        }

        .btn-outline-warning {
            color: #f39c12;
            border-color: #f39c12;
        }

    </style>
</body>
</html>