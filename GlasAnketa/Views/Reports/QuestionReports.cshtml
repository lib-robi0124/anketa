@model List<QuestionReportVM>

@{
    ViewData["Title"] = "Question Reports";
}

<div class="reports-container">
    <div class="report-header">
        <div class="header-content">
            <h1>üìä Question Reports</h1>
            <p>Detailed analysis of responses for each question</p>
        </div>
        <a href="@Url.Action("Index", "Reports")" class="btn btn-back">‚Üê Back</a>
        @if (Model != null && Model.Any())
        {
            <form asp-action="ExportQuestionReports" method="post" style="display: inline;">
                <button type="submit" class="btn btn-export">üì• Export to CSV</button>
            </form>
        }
    </div>

    @if (Model == null)
    {
        <div class="alert alert-warning">
            <strong>‚ö†Ô∏è No Data Available</strong>
            <p>No question report data is currently available.</p>
        </div>
    }
    else if (!Model.Any())
    {
        <div class="alert alert-info">
            <strong>üìã No Questions Found</strong>
            <p>No questions have been created yet or no responses have been collected.</p>
        </div>
    }
    else
    {
        <div class="report-table-container">
            @{ var role = Context.Session.GetString("UserRole"); var isAdmin = string.Equals(role, "Administrator", StringComparison.OrdinalIgnoreCase); }
            <table class="report-table">
                <thead>
                    <tr>
                        <th>Question ID</th>
                        <th>Question Text</th>
                        <th>Form</th>
                        <th>Responses</th>
                        <th>Text Responses</th>
                        <th>Sample Text Answers</th>
                        <th>Total Scale</th>
                        <th>Average</th>
                        @if (isAdmin)
                        {
                            <th>CompanyIds</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(item.QuestionId > 0 ? item.QuestionId.ToString() : "N/A")</td>
                            <td class="question-text">@(!string.IsNullOrEmpty(item.QuestionText) ? item.QuestionText : "No Question Text")</td>
                            <td>@(!string.IsNullOrEmpty(item.FormTitle) ? item.FormTitle : "No Form")</td>
                            <td>@(item.TotalResponses >= 0 ? item.TotalResponses.ToString() : "0")</td>
                            <td>@item.TextResponseCount</td>
                            <td class="text-responses-cell">
                                @if (!string.IsNullOrWhiteSpace(item.SampleTextResponses))
                                {
                                    @item.SampleTextResponses
                                }
                                else
                                {
                                    <span class="text-muted">No text answers</span>
                                }
                            </td>
                            <td>@(item.TotalScaleValue >= 0 ? item.TotalScaleValue.ToString() : "0")</td>
                            <td>
                                <div class="progress-cell">
                                    <span>@(!string.IsNullOrEmpty(item.AverageScaleValueDisplay) ? item.AverageScaleValueDisplay : "0")</span>
                                    <div class="progress-bar-small">
                                        <div class="progress-fill" style="width: @(Math.Max(0, Math.Min(100, item.AverageScaleValue * 10)))%"></div>
                                    </div>
                                </div>
                            </td>
                            @if (isAdmin)
                            {
                                <td>@item.CompanyIdList</td>
                            }
                        </tr>
                    }
            </table>
        </div>
    }
</div>

<style>
    .reports-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 20px;
    }

    .report-header {
        background: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        margin-bottom: 30px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .header-content {
        flex: 1;
    }

    .btn-back {
        background: #6c757d;
        color: white;
        text-decoration: none;
        padding: 10px 20px;
        border-radius: 5px;
        transition: background 0.3s ease;
        margin-left: 20px;
    }

    .btn-back:hover {
        background: #5a6268;
    }

        .report-header h1 {
            margin: 0;
            color: #2c3e50;
        }

    .btn-export {
        background: #27ae60;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        transition: background 0.3s ease;
    }

        .btn-export:hover {
            background: #219a52;
        }

    .report-table-container {
        background: white;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        overflow: hidden;
    }

    .report-table {
        width: 100%;
        border-collapse: collapse;
    }

        .report-table th {
            background: #34495e;
            color: white;
            padding: 15px;
            text-align: left;
            font-weight: 500;
        }

        .report-table td {
            padding: 15px;
            border-bottom: 1px solid #ecf0f1;
        }

        .report-table tr:hover {
            background: #f8f9fa;
        }

    .question-text {
        max-width: 400px;
        word-wrap: break-word;
    }

    .text-responses-cell {
        max-width: 500px;
        word-wrap: break-word;
    }

    .progress-cell {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .progress-bar-small {
        width: 80px;
        height: 6px;
        background: #ecf0f1;
        border-radius: 3px;
        overflow: hidden;
    }

    .progress-fill {
        height: 100%;
        background: #3498db;
        transition: width 0.3s ease;
    }

        .alert {
            padding: 15px;
            margin: 20px 0;
            border-radius: 5px;
            border: 1px solid transparent;
        }

        .alert-warning {
            background-color: #fff3cd;
            border-color: #ffeaa7;
            color: #856404;
        }

        .alert-info {
            background-color: #d1ecf1;
            border-color: #bee5eb;
            color: #0c5460;
        }

        .alert strong {
            display: block;
            margin-bottom: 5px;
        }
    </style>