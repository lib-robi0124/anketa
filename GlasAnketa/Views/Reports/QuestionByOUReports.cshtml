@model List<QuestionByOUMReportVM>

@{
    ViewData["Title"] = "Question Reports by Organizational Unit";
}

<div class="reports-container">
    <div class="report-header">
        <div class="header-content">
            <h1>üè¢ Question Reports by OU</h1>
            <p>Question analysis grouped by organizational units</p>
        </div>
        <a href="@Url.Action("Index", "Reports")" class="btn btn-back">‚Üê Back</a>
    </div>

    @if (Model == null)
    {
        <div class="alert alert-warning">
            <strong>‚ö†Ô∏è No Data Available</strong>
            <p>No question by OU report data is currently available.</p>
        </div>
    }
    else if (!Model.Any())
    {
        <div class="alert alert-info">
            <strong>üìã No Data by Organizational Unit</strong>
            <p>No questions with organizational unit data have been found, or no responses have been collected.</p>
        </div>
    }
    else
    {
        <div class="report-table-container">
            @{ var role = Context.Session.GetString("UserRole"); var isAdmin = string.Equals(role, "Administrator", StringComparison.OrdinalIgnoreCase); }
            <table class="report-table">
                <thead>
                    <tr>
                        <th>OU</th>
                        <th>OU2</th>
                        <th>Question ID</th>
                        <th>Question Text</th>
                        <th>Responses</th>
                        <th>Total Scale</th>
                        <th>Average</th>
                        @if (isAdmin)
                        {
                            <th>CompanyIds</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@(!string.IsNullOrEmpty(item.OU) ? item.OU : "No OU")</strong></td>
                            <td>@(!string.IsNullOrEmpty(item.OU2) ? item.OU2 : "-")</td>
                            <td>@(item.QuestionId > 0 ? item.QuestionId.ToString() : "N/A")</td>
                            <td class="question-text">@(!string.IsNullOrEmpty(item.QuestionText) ? item.QuestionText : "No Question Text")</td>
                            <td>@(item.TotalResponses >= 0 ? item.TotalResponses.ToString() : "0")</td>
                            <td>@(item.TotalScaleValue >= 0 ? item.TotalScaleValue.ToString() : "0")</td>
                            <td>
                                <div class="progress-cell">
                                    <span>@(!string.IsNullOrEmpty(item.AverageScaleValueDisplay) ? item.AverageScaleValueDisplay : "0")</span>
                                    <div class="progress-bar-small">
                                        <div class="progress-fill" style="width: @(Math.Max(0, Math.Min(100, item.AverageScaleValue * 10)))%"></div>
                                    </div>
                                </div>
                            </td>
                            @if (isAdmin)
                            {
                                <td>@item.CompanyIdList</td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<style>
    .report-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
    }

    .header-content {
        flex: 1;
    }

    .btn-back {
        background: #6c757d;
        color: white;
        text-decoration: none;
        padding: 10px 20px;
        border-radius: 5px;
        transition: background 0.3s ease;
        margin-left: 20px;
    }

    .btn-back:hover {
        background: #5a6268;
    }

    .alert {
        padding: 15px;
        margin: 20px 0;
        border-radius: 5px;
        border: 1px solid transparent;
    }

    .alert-warning {
        background-color: #fff3cd;
        border-color: #ffeaa7;
        color: #856404;
    }

    .alert-info {
        background-color: #d1ecf1;
        border-color: #bee5eb;
        color: #0c5460;
    }

    .alert strong {
        display: block;
        margin-bottom: 5px;
    }
</style>
