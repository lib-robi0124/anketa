@model List<FormReportVM>

@{
    ViewData["Title"] = "Form Reports";
}

<div class="reports-container">
    <div class="report-header">
        <div class="header-content">
            <h1>üìä Form Reports</h1>
            <p>Overall performance and completion rates for each form</p>
        </div>
        <a href="@Url.Action("Index", "Reports")" class="btn btn-back">‚Üê Back</a>
        @if (Model != null && Model.Any())
        {
            <form asp-action="ExportFormReports" method="post" style="display: inline;">
                <button type="submit" class="btn btn-export">üì• Export to CSV</button>
            </form>
        }
    </div>

    @if (Model == null)
    {
        <div class="alert alert-warning">
            <strong>‚ö†Ô∏è No Data Available</strong>
            <p>No form report data is currently available.</p>
        </div>
    }
    else if (!Model.Any())
    {
        <div class="alert alert-info">
            <strong>üìã No Forms Found</strong>
            <p>No forms have been created yet or no responses have been collected.</p>
        </div>
    }
    else
    {
        <div class="report-table-container">
            @{ var role = Context.Session.GetString("UserRole"); var isAdmin = string.Equals(role, "Administrator", StringComparison.OrdinalIgnoreCase); }
            <table class="report-table">
                <thead>
                    <tr>
                        <th>Form ID</th>
                        <th>Form Title</th>
                        <th>Description</th>
                        <th>Questions</th>
                        <th>Responses</th>
                        <th>Total Scale</th>
                        <th>Average</th>
                        @if (isAdmin)
                        {
                            <th>CompanyIds</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(item.FormId > 0 ? item.FormId.ToString() : "N/A")</td>
                            <td class="form-title">@(!string.IsNullOrEmpty(item.FormTitle) ? item.FormTitle : "No Title")</td>
                            <td class="form-description">@(!string.IsNullOrEmpty(item.FormDescription) ? item.FormDescription : "No Description")</td>
                            <td>@(item.QuestionCount >= 0 ? item.QuestionCount.ToString() : "0")</td>
                            <td>@(item.TotalResponses >= 0 ? item.TotalResponses.ToString() : "0")</td>
                            <td>@(item.TotalScaleValue >= 0 ? item.TotalScaleValue.ToString() : "0")</td>
                            <td>
                                <div class="progress-cell">
                                    <span>@(!string.IsNullOrEmpty(item.AverageScaleValueDisplay) ? item.AverageScaleValueDisplay : "0")</span>
                                    <div class="progress-bar-small">
                                        <div class="progress-fill" style="width: @(Math.Max(0, Math.Min(100, item.AverageScaleValue * 10)))%"></div>
                                    </div>
                                </div>
                            </td>
                            @if (isAdmin)
                            {
                                <td>@item.CompanyIdList</td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<style>
    .form-title {
        font-weight: 600;
        color: #2c3e50;
    }

    .header-content {
        flex: 1;
    }

    .btn-back {
        background: #6c757d;
        color: white;
        text-decoration: none;
        padding: 10px 20px;
        border-radius: 5px;
        transition: background 0.3s ease;
        margin-left: 20px;
    }

    .btn-back:hover {
        background: #5a6268;
    }

    .form-description {
        color: #7f8c8d;
        font-size: 0.9em;
    }

    .alert {
        padding: 15px;
        margin: 20px 0;
        border-radius: 5px;
        border: 1px solid transparent;
    }

    .alert-warning {
        background-color: #fff3cd;
        border-color: #ffeaa7;
        color: #856404;
    }

    .alert-info {
        background-color: #d1ecf1;
        border-color: #bee5eb;
        color: #0c5460;
    }

    .alert strong {
        display: block;
        margin-bottom: 5px;
    }
</style>
