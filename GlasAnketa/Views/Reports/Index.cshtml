@model ReportSummaryVM

@{
    ViewData["Title"] = "Reports Dashboard";
}
<link rel="stylesheet" href="~/css/reports.css" asp-append-version="true" />

<div class="reports-container">
    <div class="reports-header-with-back">
        <h1>üìä Reports Dashboard</h1>
        @{ var role = Context.Session.GetString("UserRole"); var backController = string.Equals(role, "Manager", StringComparison.OrdinalIgnoreCase) ? "Manager" : "Admin"; }
        <a href="@Url.Action("Index", backController)" class="btn btn-back">‚Üê Back</a>
    </div>

    @if (Model == null)
    {
        <div class="alert alert-warning">
            <strong>‚ö†Ô∏è No Data Available</strong>
            <p>No report data is currently available. Please ensure there is data in the system.</p>
        </div>
    }
    else if (Model.TotalUsers == 0 && Model.TotalForms == 0 && Model.TotalQuestions == 0)
    {
        <div class="alert alert-info">
            <strong>üìã Empty System</strong>
            <p>The system appears to be empty. No users, forms, or questions have been created yet.</p>
        </div>
    }
    else
    {
        <div class="summary-cards">
            <div class="summary-card">
                <div class="card-icon">üë•</div>
                <div class="card-content">
                    <h3>@(Model.TotalUsers > 0 ? Model.TotalUsers.ToString() : "0")</h3>
                    <p>Total Users</p>
                </div>
            </div>

            <div class="summary-card">
                <div class="card-icon">üìù</div>
                <div class="card-content">
                    <h3>@(Model.TotalForms > 0 ? Model.TotalForms.ToString() : "0")</h3>
                    <p>Total Forms</p>
                </div>
            </div>

            <div class="summary-card">
                <div class="card-icon">‚ùì</div>
                <div class="card-content">
                    <h3>@(Model.TotalQuestions > 0 ? Model.TotalQuestions.ToString() : "0")</h3>
                    <p>Total Questions</p>
                </div>
            </div>

            <div class="summary-card">
                <div class="card-icon">üìã</div>
                <div class="card-content">
                    <h3>@(Model.TotalAnswers > 0 ? Model.TotalAnswers.ToString() : "0")</h3>
                    <p>Total Answers</p>
                </div>
            </div>

            <div class="summary-card">
                <div class="card-icon">üìà</div>
                <div class="card-content">
                    <h3>@(Model.TotalScaleAnswers > 0 ? Model.TotalScaleAnswers.ToString() : "0")</h3>
                    <p>Scale Answers</p>
                </div>
            </div>

            <div class="summary-card">
                <div class="card-icon">üìù</div>
                <div class="card-content">
                    <h3>@(Model.TotalTextAnswers > 0 ? Model.TotalTextAnswers.ToString() : "0")</h3>
                    <p>Text Answers</p>
                </div>
            </div>

            <div class="summary-card highlight">
                <div class="card-icon">‚úÖ</div>
                <div class="card-content">
                    <h3>@(!string.IsNullOrEmpty(Model.AverageFormCompletionDisplay) ? Model.AverageFormCompletionDisplay : "0")</h3>
                    <p>Form Completion (0-100 scale)</p>
                </div>
            </div>
        </div>
    }

    @if (Model != null && Model.TotalForms > 0)
    {
        <div class="report-links">
            <div class="report-link-card">
                <h3>Question Reports</h3>
                <p>Detailed analysis by individual questions</p>
                <a href="@Url.Action("QuestionReports")" class="btn btn-primary">View Report</a>
            </div>

            <div class="report-link-card">
                <h3>Form Reports</h3>
                <p>Overall form performance and completion rates</p>
                <a href="@Url.Action("FormReports")" class="btn btn-primary">View Report</a>
            </div>

            <div class="report-link-card">
                <h3>Question by OU Reports</h3>
                <p>Question analysis by organizational units</p>
                <a href="@Url.Action("QuestionByOUReports")" class="btn btn-primary">View Report</a>
            </div>

            <div class="report-link-card">
                <h3>Form by OU Reports</h3>
                <p>Form performance by organizational units</p>
                <a href="@Url.Action("FormByOUReports")" class="btn btn-primary">View Report</a>
            </div>

            <div class="report-link-card">
                <h3>Age Reports</h3>
                <p>Responses and averages grouped by age buckets</p>
                <a href="@Url.Action("AgeReports")" class="btn btn-primary">View Report</a>
            </div>

            <div class="report-link-card">
                <h3>Work Experience Reports</h3>
                <p>Responses and averages grouped by work experience ranges</p>
                <a href="@Url.Action("WorkExperienceReports")" class="btn btn-primary">View Report</a>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <strong>üìä Reports Unavailable</strong>
            <p>Detailed reports will be available once forms are created and data is collected.</p>
        </div>
    }
</div>

<style>
    .reports-header-with-back {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .btn-back {
        background: #6c757d;
        color: white;
        text-decoration: none;
        padding: 10px 20px;
        border-radius: 5px;
        transition: background 0.3s ease;
    }

    .btn-back:hover {
        background: #5a6268;
    }

    .reports-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .summary-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin: 30px 0;
    }

    .summary-card {
        background: white;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .summary-card.highlight {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .card-icon {
        font-size: 2.5em;
    }

    .card-content h3 {
        margin: 0;
        font-size: 1.8em;
    }

    .card-content p {
        margin: 5px 0 0 0;
        opacity: 0.8;
    }

    .report-links {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        margin-top: 40px;
    }

    .report-link-card {
        background: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        text-align: center;
    }

    .report-link-card h3 {
        color: #2c3e50;
        margin-bottom: 10px;
    }

    .report-link-card p {
        color: #7f8c8d;
        margin-bottom: 20px;
    }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        background: #3498db;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        transition: background 0.3s ease;
    }

    .btn:hover {
        background: #2980b9;
    }

    .alert {
        padding: 15px;
        margin: 20px 0;
        border-radius: 5px;
        border: 1px solid transparent;
    }

    .alert-warning {
        background-color: #fff3cd;
        border-color: #ffeaa7;
        color: #856404;
    }

    .alert-info {
        background-color: #d1ecf1;
        border-color: #bee5eb;
        color: #0c5460;
    }

    .alert strong {
        display: block;
        margin-bottom: 5px;
    }

    /* Media queries must be inside style tag */
    @@media (max-width: 768px) {
        .reports-container {
            padding: 15px;
        }

        .summary-cards {
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 15px;
        }

        .summary-card {
            padding: 20px;
            flex-direction: column;
            text-align: center;
            gap: 10px;
        }

        .card-icon {
            font-size: 2em;
        }

        .card-content h3 {
            font-size: 1.5em;
        }

        .report-links {
            grid-template-columns: 1fr;
            gap: 15px;
        }

        .report-link-card {
            padding: 20px;
        }
    }

    @@media (max-width: 480px) {
        .summary-cards {
            grid-template-columns: 1fr;
        }

        .summary-card {
            flex-direction: row;
            text-align: left;
        }
    }
</style>