@{
    ViewData["Title"] = "Manager Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="admin-container">
        <div class="admin-header">
            <h1>üßë‚Äçüíº Manager Dashboard</h1>
            <div class="user-info">
                <p>Welcome, <strong>@Context.Session.GetString("UserName")</strong>!</p>
                <p>Role: <span class="badge bg-info">Manager</span></p>
                <!-- Company ID intentionally hidden for Manager -->
            </div>
            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </button>
            </form>
        </div>

        <div class="dashboard-cards">
            <div class="dashboard-card">
                <div class="card-icon">
                    <i class="fas fa-clipboard-list"></i>
                </div>
                <div class="card-content">
                    <h3>Forms</h3>
                    <div class="number" id="formsCount">0</div>
                    <p>Active Questionnaires</p>
                </div>
            </div>

            <div class="dashboard-card">
                <div class="card-icon">
                    <i class="fas fa-chart-bar"></i>
                </div>
                <div class="card-content">
                    <h3>Responses</h3>
                    <div class="number" id="responsesCount">0</div>
                    <p>Total Answers</p>
                </div>
            </div>

            <div class="dashboard-card">
                <div class="card-icon">
                    <i class="fas fa-users"></i>
                </div>
                <div class="card-content">
                    <h3>Users</h3>
                    <div class="number" id="usersCount">0</div>
                    <p>Registered Users</p>
                </div>
            </div>

            <div class="dashboard-card">
                <div class="card-icon">
                    <i class="fas fa-gauge"></i>
                </div>
                <div class="card-content">
                    <h3>Completion</h3>
                    <div class="number" id="completionRate">0</div>
                    <p>Average Completion (0-100)</p>
                </div>
            </div>
        </div>

        <div class="reporting-section">
            <h3><i class="fas fa-file-alt"></i> Management & Reports</h3>
            <div class="report-cards">
                <!-- Management shortcuts -->
                <div class="report-card">
                    <div class="report-icon">
                        <i class="fas fa-question-circle"></i>
                    </div>
                    <div class="report-content">
                        <h4>Manage Questions</h4>
                        <p>Create and edit survey questions</p>
                        <a href="@Url.Action("ManageQuestions", "Manager")" class="btn btn-outline-primary">
                            <i class="fas fa-edit"></i> Go to Questions
                        </a>
                    </div>
                </div>

                <div class="report-card">
                    <div class="report-icon">
                        <i class="fas fa-clipboard-list"></i>
                    </div>
                    <div class="report-content">
                        <h4>Manage Forms</h4>
                        <p>Organize questionnaire forms</p>
                        <a href="@Url.Action("ManageForms", "Manager")" class="btn btn-outline-success">
                            <i class="fas fa-clipboard"></i> Go to Forms
                        </a>
                    </div>
                </div>

                <div class="report-card">
                    <div class="report-icon">
                        <i class="fas fa-user-plus"></i>
                    </div>
                    <div class="report-content">
                        <h4>Manage Users</h4>
                        <p>Create new users (no edit/delete)</p>
                        <a href="@Url.Action("ManageUsers", "Manager")" class="btn btn-outline-info">
                            <i class="fas fa-user-plus"></i> Add User
                        </a>
                    </div>
                </div>

                <!-- Existing report cards -->
                <div class="report-card">
                    <div class="report-icon">
                        <i class="fas fa-question-circle"></i>
                    </div>
                    <div class="report-content">
                        <h4>Question Reports</h4>
                        <p>Detailed analysis by individual questions</p>
                        <a href="@Url.Action("QuestionReports", "Reports")" class="btn btn-outline-primary">
                            <i class="fas fa-external-link-alt"></i> View Report
                        </a>
                    </div>
                </div>

                <div class="report-card">
                    <div class="report-icon">
                        <i class="fas fa-clipboard-check"></i>
                    </div>
                    <div class="report-content">
                        <h4>Form Reports</h4>
                        <p>Overall form performance and completion rates</p>
                        <a href="@Url.Action("FormReports", "Reports")" class="btn btn-outline-success">
                            <i class="fas fa-external-link-alt"></i> View Report
                        </a>
                    </div>
                </div>

                <div class="report-card">
                    <div class="report-icon">
                        <i class="fas fa-sitemap"></i>
                    </div>
                    <div class="report-content">
                        <h4>OU Analysis - Questions</h4>
                        <p>Question performance breakdown by Organizational Units</p>
                        <a href="@Url.Action("QuestionByOUReports", "Reports")" class="btn btn-outline-info">
                            <i class="fas fa-external-link-alt"></i> View Report
                        </a>
                    </div>
                </div>

                <div class="report-card">
                    <div class="report-icon">
                        <i class="fas fa-building"></i>
                    </div>
                    <div class="report-content">
                        <h4>OU Analysis - Forms</h4>
                        <p>Form performance across departments</p>
                        <a href="@Url.Action("FormByOUReports", "Reports")" class="btn btn-outline-warning">
                            <i class="fas fa-external-link-alt"></i> View Report
                        </a>
                    </div>
                </div>

                <div class="report-card">
                    <div class="report-icon">
                        <i class="fas fa-tachometer-alt"></i>
                    </div>
                    <div class="report-content">
                        <h4>Reports Dashboard</h4>
                        <p>Comprehensive overview of reporting metrics</p>
                        <a href="@Url.Action("Index", "Reports")" class="btn btn-primary">
                            <i class="fas fa-tachometer-alt"></i> Full Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="recent-activity">
            <h3><i class="fas fa-history"></i> Recent Activity</h3>
            <div class="activity-list" id="recentActivity">
                <div class="activity-item">
                    <i class="fas fa-sync-alt fa-spin"></i>
                    <span>Loading recent activity...</span>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            loadDashboardData();
        });

        async function loadDashboardData() {
            try {
                const response = await fetch('/Reports/GetReportSummary');
                const data = await response.json();

                document.getElementById('formsCount').textContent = data.totalForms || 0;
                document.getElementById('responsesCount').textContent = data.totalAnswers || 0;
                document.getElementById('usersCount').textContent = data.totalUsers || 0;
                document.getElementById('completionRate').textContent = data.averageFormCompletionDisplay || '0';
            } catch (error) {
                console.error('Error loading dashboard data:', error);
            }
        }
    </script>
</body>
</html>